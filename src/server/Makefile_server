
# Groupe 2 : 3V-CUBE

# Makefile

CXX= g++
MAIN= main.cpp
OUT= main
CXXFLAGS= -std=c++17 -pthread -ggdb3 -Wpedantic -Wall -Wextra -Wconversion -Weffc++ -Wstrict-null-sentinel -Wold-style-cast -Wnoexcept -Wctor-dtor-privacy -Woverloaded-virtual -Wsign-promo -Wzero-as-null-pointer-constant -Wsuggest-final-types -Wsuggest-final-methods -Wsuggest-override /home/prout/Desktop/Group2/src/dependencies/CSVparser/CSVparser.cpp

all: $(OUT)

$(OUT): Connection.o Player.o PlayerConnect.o PlayerManager.o PacketManager.o main.cpp $(MAIN)
	$(CXX) $(CXXFLAGS) $(MAIN) Connection.o Player.o PlayerConnect.o PacketManager.o PlayerManager.o -o $(OUT)
	
PacketManager.o: PacketManager.cpp PacketManager.hpp
	$(CXX) $(CXXFLAGS) -c PacketManager.cpp
	
PlayerManager.o: PlayerManager.cpp PlayerManager.hpp
	$(CXX) $(CXXFLAGS) -c PlayerManager.cpp
	
PlayerConnect.o: PlayerConnect.cpp PlayerConnect.hpp
	$(CXX) $(CXXFLAGS) -c PlayerConnect.cpp
	
Player.o: Player.cpp Player.hpp
	$(CXX) $(CXXFLAGS) -c Player.cpp
	
Connection.o: Connection.cpp Connection.hpp
	$(CXX) $(CXXFLAGS) -c Connection.cpp

