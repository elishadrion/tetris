
# Groupe 2 : 3V-CUBE

# Makefile



CXX= g++
MAIN= clientt.cpp
OUT= clienttetris
CXXFLAGS= -std=c++17 -pthread -ggdb3 -Wpedantic -Wall -Wextra -Wconversion -Weffc++ -Wstrict-null-sentinel -Wold-style-cast -Wnoexcept -Wctor-dtor-privacy -Woverloaded-virtual -Wsign-promo -Wzero-as-null-pointer-constant -Wsuggest-final-types -Wsuggest-final-methods -Wsuggest-override

all: $(OUT)

$(OUT): ../game/Grid.o ../game/Tetriminos.o ../game/Block.o ../game/Game.o ../game/GUI.o Client.o  $(MAIN)
	$(CXX) $(CXXFLAGS) $(MAIN) ../game/Block.o ../game/Grid.o ../game/Game.o ../game/GUI.o ../game/Tetriminos.o Client.o -o $(OUT) -lncurses

Grid.o: ../game/Grid.cpp ../game/Grid.hpp
	$(CXX) $(CXXFLAGS) -c ../game/Grid.cpp


Tetriminos.o: ../game/Tetriminos.cpp ../game/Tetriminos.hpp
	$(CXX) $(CXXFLAGS) -c ../game/Tetriminos.cpp


Block.o: ../game/Block.cpp ../game/Block.hpp
	$(CXX) $(CXXFLAGS) -c ../game/Block.cpp


Game.o: ../game/Game.cpp ../game/Game.hpp
	$(CXX) $(CXXFLAGS) -c ../game/Game.cpp


GUI.o: ../game/GUI.cpp ../game/GUI.hpp
	$(CXX) $(CXXFLAGS) -c ../game/GUI.cpp
	
Client.o: Client.cpp Client.hpp
	$(CXX) $(CXXFLAGS) -c Client.cpp

