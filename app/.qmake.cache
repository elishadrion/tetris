top=$$PWD			#defines top source dir
## Project options, compilers, flags
QMAKE_CXX = g++-5
QMAKE_CXXFLAGS = -std=c++14 -ggdb3 -Wpedantic -Wall -Wextra		\
-Wconversion -Weffc++ -Wstrict-null-sentinel -Wold-style-cast		\
-Wnoexcept -Wctor-dtor-privacy -Woverloaded-virtual -Wsign-promo	\
-Wzero-as-null-pointer-constant -Wsuggest-final-types			\
-Wsuggest-final-methods -Wsuggest-override -isystem$${top}/include/	\
-isystem$$[QT_INSTALL_HEADERS] -idirafter$${top}

LIBS += -lpanel -lform -lncurses -L$${top} -lcommon
INCLUDEPATH += $${top}/include $${top}

# Intermediary files
OBJECTS_DIR = tmp
MOC_DIR = tmp
